{
  "name": "script-player",
  "version": "0.1.16",
  "description": "",
  "main": "main/main.js",
  "scripts": {
    "watch": "webpack --watch",
    "build": "webpack --mode=production --node-env=production",
    "build:main": "esbuild  --bundle main/main.js --outfile=dist/main.js --platform=node",
    "start": "electron .",
    "start:forge": "electron-forge start",
    "rebuild:arm64": "electron-rebuild --arch arm64",
    "package": "cross-env NODE_ENV=production electron-forge package",
    "make": "cross-env NODE_ENV=production electron-forge make --targets @electron-forge/maker-zip",
    "format": "prettier --write '**/*.{ts,tsx,js,json}'",
    "clean": "rm -rf dist",
    "lint": "eslint \"renderer/**/*.{ts,tsx}\"",
    "lint:fix": "npm run format && eslint --fix \"renderer/**/*.{ts,tsx}\" \"tests/**/*.{js,ts}\"",
    "test": "playwright test",
    "check": "tsc -p tsconfig.json --noEmit",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "serve": "webpack serve"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@playwright/test": "^1.35.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@webpack-cli/generators": "^3.0.7",
    "cross-env": "^7.0.3",
    "electron": "^25.1.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.9",
    "esbuild-loader": "^3.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "playwright": "^1.35.0",
    "prettier": "2.8.8",
    "typescript": "^5.1.3",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.5",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.4",
    "@types/web-bluetooth": "^0.0.17",
    "date-fns": "^2.30.0",
    "dotenv": "^16.1.3",
    "electron-squirrel-startup": "^1.0.0",
    "file-type": "^18.5.0",
    "immutability-helper": "^3.1.1",
    "material-ui-popup-state": "^5.0.9",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.12.1",
    "react-router-dom": "^6.13.0",
    "recoil": "^0.7.7",
    "ws": "^8.13.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": "^/(?!(dist|node_modules|common|main|package.json))"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "script_player"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        }
      ]
    }
  },
  "alias": {
    "react/jsx-runtime.js": "react/jsx-runtime",
    "react/jsx-dev-runtime.js": "react/jsx-dev-runtime"
  }
}
