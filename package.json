{
  "name": "script-player",
  "version": "0.1.7",
  "description": "",
  "main": "main/main.js",
  "scripts": {
    "watch": "parcel --no-hmr renderer/index.html renderer/splash.html --public-url ./ --target electron ",
    "build": "cross-env NODE_ENV=production parcel build renderer/index.html renderer/splash.html --public-url ./ --target electron --no-content-hash",
    "start": "electron .",
    "start:forge": "electron-forge start",
    "rebuild:arm64": "electron-rebuild --arch arm64",
    "package": "cross-env NODE_ENV=production electron-forge package",
    "make": "cross-env NODE_ENV=production electron-forge make --targets @electron-forge/maker-zip",
    "format": "prettier --write '**/*.{ts,tsx,js,json}'",
    "clean": "rm -rf dist",
    "lint": "eslint \"renderer/**/*.{ts,tsx}\"",
    "lint:fix": "npm run format && eslint --fix \"renderer/**/*.{ts,tsx}\" \"tests/**/*.{js,ts}\"",
    "test": "playwright test",
    "check": "tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@playwright/test": "^1.24.1",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "cross-env": "^7.0.3",
    "electron": "^19.0.9",
    "electron-devtools-installer": "^3.2.0",
    "electron-rebuild": "^3.2.8",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-electron-dotenv": "^0.1.0",
    "playwright": "^1.24.1",
    "prettier": "2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.9.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "date-fns": "^2.29.1",
    "electron-squirrel-startup": "^1.0.0",
    "file-type": "^17.1.4",
    "immutability-helper": "^3.1.1",
    "react": "^18.2.0",
    "react-dnd": "^14.0.5",
    "react-dnd-html5-backend": "^14.1.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "recoil": "^0.7.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "script_player"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        }
      ]
    }
  },
  "alias": {
    "react/jsx-runtime.js": "react/jsx-runtime",
    "react/jsx-dev-runtime.js": "react/jsx-dev-runtime"
  }
}
